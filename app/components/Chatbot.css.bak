/* src/components/Chatbot.css - FINAL VERSION */

/* Hide Next.js development indicators */
#__next-build-watcher,
.__next-dev-overlay,
.__next-prerender-indicator,
#react-refresh-overlay,
[data-nextjs-scroll-focus-boundary],
[data-overlay-container] {
    display: none !important;
}

/* 1. Make the iframe's own page transparent. This is correct. */
html,
body {
    background: transparent !important;
    /* Allow clicks to pass through the iframe's document to the page below */
    pointer-events: none !important;
    margin: 0 !important;
    padding: 0 !important;
    overflow: hidden !important;
}

/* 2. The main container. We will remove pointer-events from here for simplicity. */
.chatbot-container {
    position: relative;
    width: 100%;
    height: 100%;
    /* This container must also be click-through */
    pointer-events: none !important;
}

/* --- The Main Floating Button (Toggler) --- */
.chatbot-toggler {
    position: fixed;
    bottom: 25px;
    right: 30px;
    height: 45px;
    width: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    background: #1749B6;
    border: none;
    border-radius: 50%;
    outline: none;
    cursor: pointer;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    z-index: 9999;
    transition: all 0.2s ease;
    /* This element is always clickable */
    pointer-events: auto;
}

.chatbot-toggler:hover {
    transform: scale(1.1);
}

.chatbot-toggler span {
    position: absolute;
}

.chatbot-toggler .icon-open {
    opacity: 1;
    transition: opacity 0.2s ease;
}

.chatbot-toggler .icon-close {
    opacity: 0;
    transition: opacity 0.2s ease;
}

body.chatbot-open .chatbot-toggler .icon-open {
    opacity: 0;    
}

body.chatbot-open .chatbot-toggler .icon-close {
    opacity: 1;
}

/* Backdrop overlay */
.chatbot-backdrop {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 9997;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.15s ease;
}

body.chatbot-open .chatbot-backdrop {
    opacity: 1;
    visibility: visible;
}

/* --- The Main Chatbot Window --- */
.chatbot-window {
    position: fixed;
    right: 0;
    top: 0;
    width: 700px;
    max-width: 100%;
    height: 100vh;
    background: #fff;
    border-radius: 10px 0 0 10px; /* Added proper radius for right-side opening */
    box-shadow: 0 0 128px 0 rgba(0, 0, 0, 0.1), 0 32px 64px -48px rgba(0, 0, 0, 0.5);
    z-index: 9998;
    
    /* Default State: Hidden */
    transform: translateX(100%);
    visibility: hidden;
    pointer-events: none;
    
    /* Animation */
    transition: transform 0.15s ease;
}

/* Open State */
body.chatbot-open .chatbot-window {
    transform: translateX(0);
    visibility: visible;
    pointer-events: auto;
    border-radius: 10px 0 0 10px; /* Ensure radius is maintained when open */
}

/* Left side background highlight when chatbot is open */
body.chatbot-open::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: calc(100% - 700px);
    height: 100vh;
    background: rgba(23, 73, 182, 0.03);
    z-index: 9996;
    pointer-events: none;
}

/* ... all other styles for header, chatbox, input, etc., can remain exactly the same ... */
.chatbot-header {
    padding: 8px;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #ddd;
    border-radius: 10px 0 0 0; /* Match window radius */
}

.chatbot-header img {
    height: 60px;
    width: 60px;
    margin-right: 8px;
}

.chatbot-header .header-text h2 {
    font-size: 1.25rem;
    font-weight: bold;
    color: #1749B6;
    line-height: 1;
    margin: 0;
}

.chatbot-header .header-text h4 {
    font-size: 0.8rem;
    color: #666;
    margin: 0;
}

.chatbox {
    overflow-y: auto;
    height: calc(100vh - 140px);
    padding: 24px;
    background: #f7f7f7;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    scrollbar-width: thin;
    scrollbar-color: #ccc #f7f7f7;
}

.chatbox::-webkit-scrollbar {
    width: 6px;
}

.chatbox::-webkit-scrollbar-track {
    background: #f7f7f7;
}

.chatbox::-webkit-scrollbar-thumb {
    background: #ccc;
    border-radius: 3px;
}

.chatbox::-webkit-scrollbar-thumb:hover {
    background: #999;
}

.chat {
    display: flex;
    align-items: flex-start;
    gap: 12px;
}

.chat.outgoing {
    justify-content: flex-end;
}

.chat.outgoing .message-bubble {
    background: #CCE7FF;
    color: #1749B6;
    border-radius: 12px 12px 0 12px;
    padding: 12px;
    max-width: 75%;
}

.chat.incoming .message-bubble {
    background: #E4E8EB;
    color: #333;
    border-radius: 12px 12px 12px 0;
    padding: 12px;
    max-width: 75%;
}

.chat p {
    white-space: pre-wrap;
    word-wrap: break-word;
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
}

.chat-input {
    display: flex;
    gap: 5px;
    padding: 16px;
    background: #fff;
    border-top: 1px solid #ddd;
    position: relative;
    border-radius: 0 0 0 10px; /* Match window radius */
}

.chat-input textarea {
    width: 100%;
    min-height: 55px;
    padding: 16px 50px 16px 15px;
    border: 1px solid #ddd;
    border-radius: 8px;
    font-size: 0.95rem;
    resize: none;
    outline: none;
    transition: border-color 0.2s;
    font-family: inherit;
    color: #333;
}

.chat-input textarea:focus {
    border-color: #1749B6;
}

.chat-input .send-btn {
    position: absolute;
    right: 25px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    cursor: pointer;
    color: #666;
}

.chat-input .send-btn:hover:not(:disabled) {
    color: #1749B6;
}

.chat-input .send-btn:disabled {
    cursor: not-allowed;
    color: #ccc;
}